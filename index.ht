    <script>
        // =========== ENHANCED SESSION TRACKING SYSTEM ===========
        // Database
        let hacksDatabase = [];
        const ADMIN_PASSWORD = "admin123";
        
        // Ad system
        let adsWatched = 0;
        const totalAds = 5;
        let timerInterval;
        let currentTime = 10;
        
        // Session tracking - ‡¶∏‡¶æ‡¶á‡¶≤‡ßá‡¶®‡ßç‡¶ü ‡¶Ö‡¶ü‡ßã-‡¶∞‡¶ø‡¶∏‡ßá‡¶ü
        let sessionId = null;
        let sessionActive = false;
        let lastActivity = Date.now();
        let pageHidden = false;
        
        // Initialize everything
        function initializeApp() {
            loadDatabase();
            initSessionTracking();
            startAdTimer();
            setupActivityTracking();
            
            // Auto remove expired hacks every hour
            setInterval(removeExpiredHacks, 3600000);
            
            // Auto refresh ad every 30 seconds
            setInterval(refreshAd, 30000);
        }
        
        // =========== SESSION TRACKING FUNCTIONS ===========
        function initSessionTracking() {
            // Generate new session ID
            sessionId = 'session_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            
            // Check if user left previously
            const lastSession = localStorage.getItem('lastSessionData');
            if (lastSession) {
                const sessionData = JSON.parse(lastSession);
                const timeSinceLastActivity = Date.now() - sessionData.lastActivity;
                
                // ‡¶∏‡¶æ‡¶á‡¶≤‡ßá‡¶®‡ßç‡¶ü ‡¶∞‡¶ø‡¶∏‡ßá‡¶ü - ‡¶ï‡ßã‡¶®‡ßã ‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶®‡¶ø‡¶Ç ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶õ‡¶æ‡ßú‡¶æ‡¶á
                if (timeSinceLastActivity > 1000 && sessionData.adsWatched > 0) {
                    // ‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶®‡¶ø‡¶Ç ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶õ‡¶æ‡ßú‡¶æ‡¶á ‡¶∞‡¶ø‡¶∏‡ßá‡¶ü
                    resetAllProgressSilent();
                } else {
                    // Continue previous session
                    adsWatched = sessionData.adsWatched || 0;
                    sessionActive = true;
                }
            }
            
            updateAdDisplay();
            saveSessionData();
        }
        
        function saveSessionData() {
            const sessionData = {
                sessionId: sessionId,
                adsWatched: adsWatched,
                lastActivity: Date.now(),
                timestamp: Date.now()
            };
            localStorage.setItem('lastSessionData', JSON.stringify(sessionData));
        }
        
        function resetAllProgressSilent() {
            adsWatched = 0;
            sessionActive = false;
            updateAdDisplay();
            saveSessionData();
            
            // Hide files list if open
            document.getElementById('filesList').style.display = 'none';
            document.getElementById('downloadBtn').style.display = 'block';
        }
        
        // =========== ACTIVITY TRACKING ===========
        function setupActivityTracking() {
            // Track mouse movement
            document.addEventListener('mousemove', updateActivity);
            
            // Track clicks
            document.addEventListener('click', updateActivity);
            
            // Track key presses
            document.addEventListener('keypress', updateActivity);
            
            // Track page visibility for silent reset
            document.addEventListener('visibilitychange', handleVisibilityChange);
            
            // Track beforeunload (when user leaves)
            window.addEventListener('beforeunload', handleBeforeUnload);
        }
        
        function updateActivity() {
            lastActivity = Date.now();
            saveSessionData();
        }
        
        function handleVisibilityChange() {
            if (document.hidden) {
                // Page became hidden (user switched tab, minimized, etc.)
                pageHidden = true;
            } else {
                // Page became visible again
                if (pageHidden && adsWatched > 0) {
                    // ‡¶∏‡¶æ‡¶á‡¶≤‡ßá‡¶®‡ßç‡¶ü ‡¶∞‡¶ø‡¶∏‡ßá‡¶ü - ‡¶ï‡ßã‡¶®‡ßã ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶õ‡¶æ‡ßú‡¶æ‡¶á
                    setTimeout(resetAllProgressSilent, 100);
                }
                pageHidden = false;
            }
        }
        
        function handleBeforeUnload() {
            if (adsWatched > 0) {
                saveSessionData();
            }
        }
        
        // =========== DATABASE FUNCTIONS ===========
        function loadDatabase() {
            const saved = localStorage.getItem('gamehackDB');
            if (saved) {
                hacksDatabase = JSON.parse(saved);
                removeExpiredHacks();
            } else {
                hacksDatabase = [];
                saveDatabase();
            }
            updateHacksDisplay();
        }
        
        function saveDatabase() {
            localStorage.setItem('gamehackDB', JSON.stringify(hacksDatabase));
        }
        
        function getTodayDate() {
            return new Date().toISOString().split('T')[0];
        }
        
        function addDays(days) {
            const date = new Date();
            date.setDate(date.getDate() + days);
            return date.toISOString().split('T')[0];
        }
        
        function removeExpiredHacks() {
            const today = getTodayDate();
            const originalLength = hacksDatabase.length;
            
            hacksDatabase = hacksDatabase.filter(hack => hack.expiry_date >= today);
            
            if (hacksDatabase.length !== originalLength) {
                saveDatabase();
                updateHacksDisplay();
                showMessage("üóëÔ∏è Expired hacks removed!");
            }
        }
        
        function updateHacksDisplay() {
            const container = document.getElementById('hacksContainer');
            const adminList = document.getElementById('adminHacksList');
            
            if (hacksDatabase.length === 0) {
                container.innerHTML = '<div style="text-align:center; color:#888; padding:20px;">No hacks available yet. Admin will add soon.</div>';
                adminList.innerHTML = '<div style="text-align:center; color:#888; padding:10px; font-size:11px;">No hacks added yet</div>';
                return;
            }
            
            // Update user view
            container.innerHTML = '';
            hacksDatabase.forEach(hack => {
                const fileItem = document.createElement('div');
                fileItem.className = 'file-item';
                fileItem.innerHTML = `
                    <div>
                        <div class="file-name">${hack.title}</div>
                        <div style="color:#888; font-size:10px;">Expires: ${hack.expiry_date}</div>
                    </div>
                    <a href="${hack.url}" class="download-link" target="_blank" onclick="trackDownload()">‚¨áÔ∏è</a>
                `;
                container.appendChild(fileItem);
            });
            
            // Update admin view
            adminList.innerHTML = '';
            hacksDatabase.forEach((hack, index) => {
                const item = document.createElement('div');
                item.className = 'admin-item';
                item.innerHTML = `
                    <div>
                        <div style="color:white; font-weight:bold; font-size:10px;">${hack.title}</div>
                        <div style="color:#888; font-size:9px;">Exp: ${hack.expiry_date}</div>
                    </div>
                    <button class="small-btn" onclick="deleteHack(${index})">Delete</button>
                `;
                adminList.appendChild(item);
            });
        }
        
        function trackDownload() {
            showMessage("‚úÖ Download started!");
            updateActivity();
        }
        
        // =========== AD SYSTEM FUNCTIONS ===========
        function updateAdDisplay() {
            const remaining = totalAds - adsWatched;
            const progressPercent = (adsWatched / totalAds) * 100;
            
            document.getElementById('adCounter').textContent = remaining;
            document.getElementById('progressFill').style.width = progressPercent + '%';
            document.getElementById('progressText').textContent = `${adsWatched}/${totalAds} ads watched`;
            
            if (remaining > 0) {
                document.getElementById('counterText').textContent = `${remaining} ads remaining`;
            } else {
                document.getElementById('counterText').innerHTML = '<span style="color:#00ff00">‚úÖ Ready!</span>';
                document.getElementById('adSection').style.display = 'none';
            }
            
            const btn = document.getElementById('downloadBtn');
            if (adsWatched >= totalAds && sessionActive) {
                btn.disabled = false;
                btn.classList.add('active');
                btn.textContent = '‚úÖ UNLOCK ALL FILES';
            } else {
                btn.disabled = true;
                btn.classList.remove('active');
                btn.textContent = `üîí WATCH ${remaining} MORE AD${remaining > 1 ? 'S' : ''}`;
            }
        }
        
        function startAdTimer() {
            clearInterval(timerInterval);
            currentTime = 10;
            const timerElement = document.getElementById('timer');
            
            timerInterval = setInterval(() => {
                currentTime--;
                timerElement.textContent = currentTime;
                
                if (currentTime <= 0) {
                    clearInterval(timerInterval);
                    completeAd();
                }
            }, 1000);
        }
        
        function completeAd() {
            if (adsWatched >= totalAds) return;
            
            // Start session if first ad
            if (!sessionActive) {
                sessionActive = true;
            }
            
            adsWatched++;
            saveSessionData();
            updateAdDisplay();
            updateActivity();
            
            showMessage(`‚úÖ Ad ${adsWatched}/${totalAds} watched!`);
            
            // Adsterra ad automatically refreshes
            
            if (adsWatched < totalAds) {
                setTimeout(startAdTimer, 2000);
            }
        }
        
        function refreshAd() {
            // Adsterra ad auto refreshes, so no need for manual refresh
            // Keep this function for compatibility
        }
        
        function showFiles() {
            if (adsWatched >= totalAds && sessionActive && hacksDatabase.length > 0) {
                document.getElementById('filesList').style.display = 'block';
                document.getElementById('downloadBtn').style.display = 'none';
                updateActivity();
                
                document.getElementById('filesList').scrollIntoView({
                    behavior: 'smooth'
                });
            } else if (!sessionActive) {
                alert("‚ö†Ô∏è Your session has expired! Please watch 5 ads again.");
                resetAllProgressSilent();
            } else if (hacksDatabase.length === 0) {
                alert("‚ö†Ô∏è No hacks available yet. Admin will add soon.");
            } else {
                alert(`‚ö†Ô∏è Watch ${totalAds - adsWatched} more ad${totalAds - adsWatched > 1 ? 's' : ''} to unlock!`);
            }
        }
        
        // =========== ADMIN FUNCTIONS ===========
        function openAdmin() {
            document.getElementById('adminModal').style.display = 'flex';
            document.getElementById('loginSection').style.display = 'block';
            document.getElementById('adminDashboard').style.display = 'none';
            document.getElementById('adminPassword').value = '';
            document.getElementById('adminPassword').focus();
            updateActivity();
        }
        
        function closeAdmin() {
            document.getElementById('adminModal').style.display = 'none';
            updateActivity();
        }
        
        function adminLogin() {
            const password = document.getElementById('adminPassword').value;
            
            if (password === ADMIN_PASSWORD) {
                document.getElementById('loginSection').style.display = 'none';
                document.getElementById('adminDashboard').style.display = 'block';
                updateHacksDisplay();
            } else {
                alert("‚ùå Wrong password!");
                document.getElementById('adminPassword').value = '';
                document.getElementById('adminPassword').focus();
            }
            updateActivity();
        }
        
        function adminLogout() {
            document.getElementById('loginSection').style.display = 'block';
            document.getElementById('adminDashboard').style.display = 'none';
            document.getElementById('adminPassword').value = '';
            closeAdmin();
        }
        
        function addHack() {
            const name = document.getElementById('hackName').value.trim();
            const url = document.getElementById('hackUrl').value.trim();
            const expiryDays = parseInt(document.getElementById('expiryDays').value) || 3;
            
            if (!name || !url) {
                alert("Please fill all fields!");
                return;
            }
            
            if (!url.startsWith('http://') && !url.startsWith('https://')) {
                alert("Please enter a valid URL starting with http:// or https://");
                return;
            }
            
            const newHack = {
                id: Date.now(),
                title: name.toUpperCase(),
                url: url,
                date_added: getTodayDate(),
                expiry_date: addDays(expiryDays)
            };
            
            hacksDatabase.push(newHack);
            saveDatabase();
            updateHacksDisplay();
            
            document.getElementById('hackName').value = '';
            document.getElementById('hackUrl').value = '';
            document.getElementById('hackName').focus();
            
            showMessage("‚úÖ Hack added successfully!");
            updateActivity();
        }
        
        function deleteHack(index) {
            if (confirm("Delete this hack?\n\n" + hacksDatabase[index].title)) {
                const deletedHack = hacksDatabase[index];
                hacksDatabase.splice(index, 1);
                saveDatabase();
                updateHacksDisplay();
                showMessage(`üóëÔ∏è "${deletedHack.title}" deleted!`);
            }
            updateActivity();
        }
        
        function refreshHacks() {
            removeExpiredHacks();
            updateHacksDisplay();
            showMessage("üîÑ List refreshed!");
            updateActivity();
        }
        
        function deleteExpiredHacks() {
            const beforeCount = hacksDatabase.length;
            removeExpiredHacks();
            const afterCount = hacksDatabase.length;
            const deletedCount = beforeCount - afterCount;
            
            showMessage(`üóëÔ∏è Deleted ${deletedCount} expired hack${deletedCount !== 1 ? 's' : ''}!`);
            updateActivity();
        }
        
        // =========== UTILITY FUNCTIONS ===========
        function showMessage(msg) {
            const msgEl = document.createElement('div');
            msgEl.style.cssText = `
                position: fixed;
                top: 10px;
                right: 10px;
                background: #00ff00;
                color: #000;
                padding: 8px 15px;
                border-radius: 8px;
                font-size: 12px;
                font-weight: bold;
                z-index: 1000;
                animation: slideIn 0.3s;
                max-width: 80%;
                text-align: center;
            `;
            msgEl.textContent = msg;
            document.body.appendChild(msgEl);
            
            setTimeout(() => {
                msgEl.remove();
            }, 2000);
        }
        
        // Initialize when page loads
        window.onload = initializeApp;
        
        // Add CSS animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>

