        }
        
        .badge {
            display: inline-block;
            background: rgba(0, 255, 0, 0.1);
            border: 1px solid #00ff00;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 11px;
            color: #00ff00;
            margin: 3px;
        }
        
        /* Ad Section */
        .ad-section {
            text-align: center;
            margin: 15px 0;
            padding: 10px;
            background: #222;
            border-radius: 8px;
            border: 1px solid #ff9900;
        }
        
        .ad-label {
            color: #ff9900;
            font-size: 14px;
            margin-bottom: 8px;
            display: block;
        }
        
        .ad-timer {
            color: #888;
            font-size: 12px;
            margin-top: 8px;
        }
        
        /* Ad Counter */
        .counter-box {
            text-align: center;
            margin: 15px 0;
            padding: 10px;
            background: rgba(255, 153, 0, 0.1);
            border-radius: 8px;
            border: 1px solid #ff9900;
        }
        
        .counter-num {
            font-size: 32px;
            color: #00ff00;
            font-weight: bold;
            margin: 5px 0;
        }
        
        .counter-text {
            color: #fff;
            font-size: 13px;
        }
        
        /* Progress Bar */
        .progress-bar {
            width: 100%;
            height: 8px;
            background: #333;
            border-radius: 4px;
            margin: 10px 0;
            overflow: hidden;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #ff0000, #ff9900);
            width: 0%;
            transition: width 0.5s;
            border-radius: 4px;
        }
        
        /* Download Button */
        .download-btn {
            display: block;
            width: 100%;
            background: #444;
            color: #888;
            border: none;
            border-radius: 25px;
            padding: 12px;
            font-size: 16px;
            font-weight: bold;
            cursor: not-allowed;
            margin: 15px 0;
            text-align: center;
            transition: all 0.3s;
        }
        
        .download-btn.active {
            background: linear-gradient(to right, #ff0000, #ff6600);
            color: white;
            cursor: pointer;
        }
        
        .download-btn.active:hover {
            background: linear-gradient(to right, #ff6600, #ff0000);
        }
        
        /* Files List */
        .files-list {
            display: none;
            margin-top: 15px;
            background: #222;
            border-radius: 8px;
            padding: 15px;
            border: 1px solid #00ff00;
            max-height: 300px;
            overflow-y: auto;
        }
        
        .file-item {
            background: #333;
            padding: 10px;
            margin: 8px 0;
            border-radius: 6px;
            border-left: 3px solid #ff9900;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .file-name {
            color: #fff;
            font-size: 13px;
        }
        
        .download-link {
            background: #00ff00;
            color: #000;
            border: none;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }
        
        /* Footer */
        .footer {
            text-align: center;
            margin-top: 30px;
            padding: 15px;
            border-top: 1px solid #333;
            color: #666;
            font-size: 11px;
            background: rgba(0, 0, 0, 0.5);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            border: 1px solid transparent;
            user-select: none;
        }
        
        .footer:hover {
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid #00ff00;
